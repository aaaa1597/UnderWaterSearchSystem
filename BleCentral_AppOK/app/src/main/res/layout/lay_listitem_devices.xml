<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="fill_horizontal"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaa"/>

        <TextView
            android:id="@+id/device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bbbbbbbbb"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imvConnectStatus"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.75"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/status0_none" />

    <ImageView
        android:id="@+id/imvRssi"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/wifi_level_3"/>

    <TextView
        android:id="@+id/txtHertBeat"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/heartbeat"
        android:gravity="center"
        android:textSize="36sp"
        android:text="-" />

    <Button
        android:id="@+id/connect_device"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="@string/connect_device"
        android:textAllCaps="true"
        android:layout_marginEnd="8dp"
        android:background="#404F40"
        android:elevation="4dp"
        android:clickable="false"
        android:focusable="false"/>

</LinearLayout>