<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragBizLogic">

    <Button
        android:id="@+id/btnSelectMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="メンバ選択"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnSetBuoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectMember"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text=" 浮標設定 "
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnSerchStartEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnSetBuoy"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:text=" 検索開始 "
        tools:ignore="HardcodedText" />

    <Space
        android:id="@+id/sps001"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSerchStartEnd"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnCngSerchColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sps001"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:text="検索色変更"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>