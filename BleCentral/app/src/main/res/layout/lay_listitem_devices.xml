<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="fill_horizontal"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="aaaaaaaaa"/>

        <TextView
            android:id="@+id/device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="bbbbbbbbb"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imvIsFireFiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/diver" />

    <ImageView
        android:id="@+id/imvRssi"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/wifi_level_3"
        app:layout_constraintLeft_toRightOf="@+id/device_address"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHertBeat"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:background="@drawable/heartbeat"
        android:gravity="center"
        android:textSize="26sp"
        android:text="ccccc"
        app:layout_constraintLeft_toRightOf="@+id/imvIsFireFiter"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/connect_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="@string/connect_device"
        android:textAllCaps="true"
        android:layout_marginEnd="8dp"
        android:background="#404F40"
        android:padding="8dp"
        android:elevation="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false"
        android:focusable="false"/>
        <!-- clickable = false for passing the touch events to the RecyclerView -->

</LinearLayout>